<%= form_for @user do |f| %>
  <%= f.label :username %><br />
  <%= f.text_field :username, placeholder: "Enter your username: " %><br />
  <%= f.label :email %><br />
  <%= f.email_field :email %><br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <%= f.submit %>
  <% end %>