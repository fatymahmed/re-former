
<%= form_tag("/users", method: "post") do %>
  <%= label_tag(:username, "Enter username: ") %>
  <%= text_field_tag(:username) %>
  <%= label_tag(:email, "Enter email: ") %>
  <%= email_field_tag(:email) %>
  <%= label_tag(:password, "Enter password: ") %>
  <%= password_field_tag(:password) %>
  <%= submit_tag('Submit') %>
<% end%>